        "transform": [
        {
          "type": "formula",
          "expr": "datum['Country']",
          "as": "d1"
        },
        {
          "type": "formula",
          "expr": "datum.Industry",
          "as": "d2"
        },
        {
          "type": "formula",
          "expr": "datum.IndustryCount",
          "as": "size"
        }
      ]
    },
    {
      "name": "nodes",
      "source": "top_5_country_sankey.csv",
      "transform": [
        {
          "type": "filter",
          "expr": "!groupSelector || groupSelector.d1 == datum.d1 || groupSelector.d2 == datum.d2"
        },
        {
          "type": "formula",
          "expr": "datum.d1 + datum.d2",
          "as": "key"
        },
        {
          "type": "fold",
          "fields": ["d1", "d2"],
          "as": ["stack", "grpId"]
        },
        {
          "type": "formula",
          "expr": "datum.stack == 'd1' ? datum.d1 + ' ' + datum.d2 : datum.d2 + ' ' + datum.d1",
          "as": "sortField"
        },
        {
          "type": "stack",
          "groupby": ["stack"],
          "sort": {
            "field": "sortField",
            "order": "descending"
          },
          "field": "size"
        },
        {
          "type": "formula",
          "expr": "(datum.y0 + datum.y1) / 2",
          "as": "yc"
        }
      ]
    },
    {
      "name": "groups",
      "source": "nodes",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["stack", "grpId"],
          "fields": ["size"],
          "ops": ["sum"],
          "as": ["total"]
        },
        {
          "type": "stack",
          "groupby": ["stack"],
          "sort": {
            "field": "grpId",
            "order": "descending"
          },
          "field": "total"
        },
        {
          "type": "formula",
          "expr": "scale('y', datum.y0)",
          "as": "scaledY0"
        },
        {
          "type": "formula",
          "expr": "scale('y', datum.y1)",
          "as": "scaledY1"
        },
        {
          "type": "formula",
          "expr": "datum.stack == 'd1'",
          "as": "rightLabel"
        },
        {
          "type": "formula",
          "expr": "datum.total / domain('y')[1]",
          "as": "percentage"
        }
      ]
    },
    {
      "name": "destinationNodes",
      "source": "nodes",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.stack == 'd2'"
        }
      ]
    },
    {
      "name": "edges",
      "source": "nodes",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.stack == 'd1'"
        },
        {
          "type": "lookup",
          "from": "destinationNodes",
          "key": "key",
          "fields": ["key"],
          "as": ["target"]
        },
        {
          "type": "linkpath",
          "orient": "horizontal",
          "shape": "diagonal",
          "sourceY": {
            "expr": "scale('y', datum.yc)"
          },
          "sourceX": {
            "expr": "scale('x', 'd1') + bandwidth('x')"
          },
          "targetY": {
            "expr": "scale('y', datum.target.yc)"
          },
          "targetX": {
            "expr": "scale('x', 'd2')"
          }
        },
        {
          "type": "formula",
          "expr": "range('y')[0] - scale('y', datum.size)",
          "as": "strokeWidth"
        },
        {
          "type": "formula",
          "expr": "datum.size / domain('y')[1]",
          "as": "percentage"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": ["d1", "d2"],
      "paddingOuter": 0.05,
      "paddingInner": 0.95
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "nodes",
        "field": "y1"
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": ["#DB4A0B", "#BF3FC8", "#A6762E", "#187071", "#2820F7",
                "#1f77b4", "#ff7f0e", "#062246", "#000000", "#9467bd",
                "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf",
                "#aec7e8", "#ffbb78", "#123205", "#ff9896", "#B8850E"],
      "domain": [ "China",  "Germany", "India","United Kingdom", "United States",
                 "Artificial Intelligence", "Auto & transportation", "Consumer & retail", "Cybersecurity", "Data management & analytics",
                 "E-commerce & direct-to-consumer", "Edtech", "Fintech", "Hardware", "Health", "Internet software & services",
                 "Mobile & telecommunications", "Other", "Supply chain, logistics, & delivery", "Travel"]
    },
    {
      "name": "stackNames",
      "type": "ordinal",
      "range": ["Country", "Industry"],
      "domain": ["d1", "d2"]
    }
  ],

  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "domain": false,
      "encode": {
        "labels": {
          "update": {
            "text": {"scale": "stackNames", "field": "value"},
            "fontWeight": {"value": "bold"}
          }
        }
      }
    },
    {
      "orient": "top",
      "scale": "x",
      "domain": false,
      "encode": {
        "labels": {
          "update": {
            "text": {"scale": "stackNames", "field": "value"},
            "fontWeight": {"value": "bold"}
            
          }
        }
      }
    },
    {
      "orient": "left",
      "scale": "y",
      "labels": false,
      "domain": false,
      "ticks": false
    }
  ],

  "marks": [
    {
      "type": "path",
      "name": "edgeMark",
      "from": {"data": "edges"},
      "clip": true,
      "encode": {
        "update": {
          "stroke": [
            {"test": "groupSelector && groupSelector.stack=='d1'", "scale": "color", "field": "d2"},
            {"scale": "color", "field": "d1"}
          ],
          "strokeWidth": {"field": "strokeWidth"},
          "path": {"field": "path"},
          "strokeOpacity": {"signal": "!groupSelector && (groupHover.d1 == datum.d1 || groupHover.d2 == datum.d2) ? 0.9 : 0.3"},
          "zindex": {"signal": "!groupSelector && (groupHover.d1 == datum.d1 || groupHover.d2 == datum.d2) ? 1 : 0"},
          "tooltip": {"signal": "{\"Country\": datum.d1, \"Industry\": datum.d2, \"Count\":format(datum.size, ',.0f')}"}
        },
        "hover": {"strokeOpacity": {"value": 1}}
      }
    },
    {
      "type": "rect",
      "name": "groupMark",
      "from": {"data": "groups"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "grpId"},
          "width": {"scale": "x", "band": 1}
        },
        "update": {
          "x": {"scale": "x", "field": "stack"},
          "y": {"field": "scaledY0"},
          "y2": {"field": "scaledY1"},
          "fillOpacity": {"value": 0.8},
          "tooltip": {"signal": "datum.grpId + ' has count of ' + format(datum.total, ',.0f')"}
        },
        "hover": {"fillOpacity": {"value": 1}}
      }
    },
    {
      "type": "text",
      "from": {"data": "groups"},
      "interactive": false,
      "encode": {
        "update": {
          "x": {"signal": "scale('x', datum.stack) + (datum.rightLabel ? bandwidth('x') + 8 : -8)"},
          "yc": {"signal": "(datum.scaledY0 + datum.scaledY1) / 2"},
          "align": {"signal": "datum.rightLabel ? 'left' : 'right'"},
          "baseline": {"value": "middle"},
          "fontWeight": {"value": "bold"},
          "text": {"signal": "abs(datum.scaledY0 - datum.scaledY1) > 13 ? datum.grpId : ''"}
        }
      }
    },
    {
      "type": "group",
      "data": [
        {
          "name": "dataForShowAll",
          "values": [{}],
          "transform": [{"type": "filter", "expr": "groupSelector"}]
        }
      ],
      "encode": {
        "enter": {
          "xc": {"signal": "width / 2"},
          "y": {"value": 30},
          "width": {"value": 80},
          "height": {"value": 30}
        }
      },
      "marks": [
        {
          "type": "group",
          "name": "groupReset",
          "from": {"data": "dataForShowAll"},
          "encode": {
            "enter": {
              "cornerRadius": {"value": 6},
              "fill": {"value": "#f5f5f5"},
              "stroke": {"value": "#c1c1c1"},
              "strokeWidth": {"value": 2},
              "height": {"field": {"group": "height"}},
              "width": {"field": {"group": "width"}}
            },
            "update": {"opacity": {"value": 1}},
            "hover": {"opacity": {"value": 0.7}}
          },
          "marks": [
            {
              "type": "text",
              "interactive": false,
              "encode": {
                "enter": {
                  "xc": {"field": {"group": "width"}, "mult": 0.5},
                  "yc": {"field": {"group": "height"}, "mult": 0.5, "offset": 2},
                  "align": {"value": "center"},
                  "baseline": {"value": "middle"},
                  "fontWeight": {"value": "bold"},
                  "text": {"value": "Show All"}
                }
              }
            }
          ]
        }
      ]
    }
  ],

  "signals": [
    {
      "name": "groupHover",
      "value": {},
      "on": [
        {
          "events": "@groupMark:mouseover",
          "update": "{d1:datum.stack=='d1' && datum.grpId, d2:datum.stack=='d2' && datum.grpId}"
        },
        {"events": "mouseout", "update": "{}"}
      ]
    },
    {
      "name": "groupSelector",
      "value": false,
      "on": [
        {
          "events": "@groupMark:click!",
          "update": "{stack:datum.stack, d1:datum.stack=='d1' && datum.grpId, d2:datum.stack=='d2' && datum.grpId}"
        },
        {
          "events": [{"type": "click", "markname": "groupReset"}, {"type": "dblclick"}],
          "update": "false"
        }
      ]
    }
  ],

  "config": {"view": {"stroke": null}, "background": null}
}
    
    