            "fillOpacity": {"value": 0.5}
          }
        },
        "transform": [
          {
            "type": "wordcloud",
            "size": [800, 400],
            "text": {"field": "text"},
            "rotate": {"expr": "[-45, 0, 45][~~(random() * 3)]"},
            "font": "Helvetica Neue, Arial",
